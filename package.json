{
  "name": "figma-custom-mcp",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build":   "npm run build   --workspace=packages/mcp-server",
    "start":   "npm run start   --workspace=packages/mcp-server",
    "dev":     "npm run dev     --workspace=packages/mcp-server",
    "watch":   "npm run watch   --workspace=packages/mcp-server",
    "build:all": "npm run build --workspaces --if-present"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}

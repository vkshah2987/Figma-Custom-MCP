{
  "name": "figma-mcp-bridge",
  "displayName": "Figma MCP Bridge",
  "description": "Connects the Figma plugin to GitHub Copilot via an in-memory bridge and VS Code LM tool.",
  "version": "1.3.0",
  "publisher": "figma-mcp",
  "license": "MIT",
  "categories": [
    "Other"
  ],
  "keywords": [
    "figma",
    "mcp",
    "model-context-protocol",
    "copilot",
    "design"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "languageModelTools": [
      {
        "name": "get_current_figma_selection",
        "displayName": "Get Current Figma Selection",
        "modelDescription": "Returns the node data for the currently selected element in the Figma plugin. The Figma plugin must be open and a single node must be selected. Returns fileKey, nodeId, and raw nodeData.",
        "inputSchema": {
          "type": "object",
          "properties": {}
        }
      }
    ],
    "commands": [
      {
        "command": "figmaMcp.buildWebpage",
        "title": "Figma MCP: Build Webpage from Selection",
        "icon": "$(globe)"
      },
      {
        "command": "figmaMcp.startBridge",
        "title": "Figma MCP: Start Bridge (localhost:3050)",
        "icon": "$(plug)"
      },
      {
        "command": "figmaMcp.clearSelection",
        "title": "Figma MCP: Clear Current Selection"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc",
    "compile:watch": "tsc -watch",
    "bridge": "node dist/bridge.js",
    "package": "vsce package --allow-missing-repository"
  },
  "dependencies": {
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.5",
    "@types/vscode": "^1.109.0",
    "@vscode/vsce": "^3.7.1",
    "typescript": "^5.7.3"
  },
  "engines": {
    "vscode": "^1.109.0",
    "node": ">=20.0.0"
  }
}
